    <script>
        $(document).ready(function(){
            $('.showmore').mouseover(function(){
                $('.showmore').css('background','rgba(0,0,0,0.1)');
                $('.showmore a').css('color','#333');
            });
            $('.showmore').mouseout(function(){
                $('.showmore').css('background','rgba(0,0,0,0.3)');
                $('.showmore a').css('color','white');
            });
        });
    </script>
</body>
</html>
